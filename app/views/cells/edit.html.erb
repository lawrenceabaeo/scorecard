<h1>Edit</h1>
<h3>Round <%= @round.round_number %> for <%= @boxer_full_name %></h3>

<% if @events_for_boxer_in_this_round.blank? == false %>
  <h4>Your Currently Selected Actions:</h4>
  <table class='table table-bordered'>
    <tbody>
      <thead>
        <th>Name</th>
        <th>Points</th>
        <th>Remove</th>  
      </thead>
    </tbody>
    <% @events_for_boxer_in_this_round.each do |event| %>
      <% action = Action.find(event.action.id) %>
      <tr>
        <td>
          <%= action.name %>
        </td>
        <td>
          <%= action.points %>
        </td>
        <td>
          <%= link_to cell_path(id: @cell_id, event_id: event.id), :class => 'remove-link', method: :delete do %>
          remove <i class="fa fa-times"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<h4>All Options</h4>
<table class='table table-bordered'>
  <tbody>
    <thead>
      <th>Name</th>
      <th>Points</th>
      <th>Apply</th>
    </thead>
  </tbody>

  <% @actions.each do |action| %>
    <tr>
      <td>
        <%= action.name %>
      </td>
      <td>
        <%= action.points %>
      </td>
      <td>
        <%= link_to "apply", cell_path(id: @cell_id, action_id: action.id), method: :patch %>
      </td>
    </tr>
  <% end %>
</table>

<br /> 
<p><%= link_to card_path(@card) do %>
<i class="fa fa-arrow-circle-left"></i> back to card
<% end %>  
</p>
