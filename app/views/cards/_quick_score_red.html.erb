<% if (corner == "red") %>
  <% corner_id = round.redcornercell %>
<% else %>
  <% corner_id = round.bluecornercell %>
<% end %>

<%= link_to edit_cell_path(round.redcornercell), :title => "More scoring options", :class => 'tip' do %>  
  <i class="fa fa-cogs"></i>
<% end %>
&nbsp;&nbsp; 

<%= link_to cell_path(id: corner_id, action_id: tko_id), method: :patch, :title => "TKO, " + boxer_name + " wins by technical knockout", :class => 'tip' do %>
  <i class="fa fa-asterisk"></i>
<% end %>
&nbsp;&nbsp;

<%= link_to cell_path(id: corner_id, action_id: ko_id), method: :patch, :title => "KO, " + boxer_name + " wins by knockout", :class => 'tip' do %>
  <i class="fa fa-bolt"></i>  
<% end %>
&nbsp;&nbsp;

<%= link_to cell_path(id: corner_id, action_id: point_deduction_id), method: :patch, :title => "-1 point to " + boxer_name, :class => 'tip' do %>
  <i class="fa fa-minus-circle"></i>
<% end %>
&nbsp;&nbsp;

<%= link_to cell_path(id: corner_id, action_id: wins_round_id), method: :patch, :title => "+10,  " + boxer_name + " wins round", :class => 'tip' do %>
<i class="fa fa-smile-o"></i>
<% end %>
